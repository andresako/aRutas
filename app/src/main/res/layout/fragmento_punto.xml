<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#dee4ee"
    android:orientation="vertical"
    android:padding="@dimen/espacio_normal_2"
    tools:context="asako.clase.rutas.UI.FragmentoPunto">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="8dp"
        android:text="@string/etiqueta_info_punto"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="2dp"
        card_view:cardUseCompatPadding="true">

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:padding="@dimen/espacio_normal_2"
            android:rowCount="6">

            <ImageView
                android:id="@+id/texto_nombreI"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_gravity="center|left"
                android:layout_marginBottom="@dimen/espacio_normal_2"
                android:layout_marginRight="@dimen/espacio_normal_2"
                android:layout_row="0"
                android:layout_rowSpan="2"
                android:src="@drawable/user" />

            <TextView
                android:id="@+id/texto_nombreT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_row="0"
                android:text="Nombre :"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/texto_nombre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="@dimen/espacio_normal_2"
                android:layout_row="1"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <ImageView
                android:id="@+id/texto_direccionI"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_gravity="center|left"
                android:layout_marginBottom="@dimen/espacio_normal_2"
                android:layout_marginRight="@dimen/espacio_normal_2"
                android:layout_row="2"
                android:layout_rowSpan="2"
                android:src="@drawable/location" />

            <TextView
                android:id="@+id/texto_direccionT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_row="2"
                android:text="Direccion :"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/texto_direccion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_gravity="left|center"
                android:layout_marginBottom="@dimen/espacio_normal_2"
                android:layout_row="3"
                android:textAppearance="?android:attr/textAppearanceSmall" />

        </GridLayout>

    </android.support.v7.widget.CardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/espacio_normal_2"
        android:paddingBottom="@dimen/espacio_normal_3"
        android:text="Otros detalles"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:padding="@dimen/espacio_normal_2"
            android:rowCount="4">

            <ImageView
                android:id="@+id/texto_detallesI"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_gravity="center|left"
                android:layout_marginRight="@dimen/espacio_normal_2"
                android:layout_row="2"
                android:layout_rowSpan="2"
                android:src="@drawable/razon" />

            <TextView
                android:id="@+id/texto_detallesT"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_column="1"
                android:layout_row="2"
                android:text="Detalles :"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/texto_detalles"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_column="1"
                android:layout_gravity="left|center"
                android:layout_row="3"
                android:layout_marginRight="64dp"
                android:textAppearance="?android:attr/textAppearanceSmall" />

        </GridLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>
